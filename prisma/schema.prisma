generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Survey {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  questions Question[] // Relating to the Question model
  responses Response[]
  createdAt DateTime   @default(now())
}

model Question {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  surveyId     String   @db.ObjectId
  survey       Survey   @relation(fields: [surveyId], references: [id])
  question     String
  typeresponse String  // "range", "select", etc.
  options      String[] // Always an array (empty if not used)
}

model Response {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  surveyId  String   @db.ObjectId
  survey    Survey   @relation(fields: [surveyId], references: [id])
  answers   String[] // Stores user answers
  createdAt DateTime @default(now())
}
